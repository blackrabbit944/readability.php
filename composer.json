{
    "name": "blackrabbit/readability.php",
    "type": "library",
    "description": "A PHP port of Readability.js",
    "keywords": ["readability", "html"],
    "homepage": "https://github.com/blackrabbit944/readability.php",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Andres Rey",
            "email": "andreskrey@gmail.com",
            "role": "Original Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "blackrabbit\\Readability\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {"blackrabbit\\Readability\\Test\\": "test"}
    },
    "require": {
        "php": ">=7.4.0",
        "ext-dom": "*",
        "ext-xml": "*",
        "ext-mbstring": "*",
        "psr/log": "^3.0",
        "masterminds/html5": "^2.0",
        "league/uri": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "monolog/monolog": "^2.3"
    },
    "suggest": {
        "monolog/monolog": "Allow logging debug information"
    }
}
